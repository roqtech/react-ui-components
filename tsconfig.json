{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "target": "es2017",
    "module":"ESNext",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.stories.tsx"]
}